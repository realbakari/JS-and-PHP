<body>
  <h1>JavaScript and PHP - Loop</h1>
  <ul>
  <script>
    i = 0;
    while(i < 10){
      document.write("<li>JS and PHP</li>");
      i = i + 1;
    }
  </script>
  </ul>
 
  <h2>php</h2>
  <ul>
  <?php
    $i = 0;
    while($i < 10){
      echo "<li>JS and PHP</li>";
      $i = $i + 1;
    }
  ?>
  </ul>
</body>
</html>
